<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:backgroundTint="@color/c_2F302B"
        app:elevation="0dp"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:navigationIcon="@mipmap/ic_nav_back"
            app:title="@string/account_security"
            app:titleCentered="true"
            app:titleTextAppearance="@style/TextAppearance.Widget.MaterialToolbar.title"
            app:titleTextColor="@color/c_FE6C30" />

    </com.google.android.material.appbar.AppBarLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="绑定手机号"
        android:textColor="@color/c_333333"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/appbar"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="21dp"
        android:layout_marginStart="12dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="13853910086"
        android:textColor="@color/c_333333"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/appbar"
        app:layout_constraintEnd_toStartOf="@+id/tv_edit1"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="12dp"/>

    <TextView
        android:id="@+id/tv_edit1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="修改"
        android:textColor="@color/c_FE6C30"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/appbar"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="28dp"/>

    <ImageView
        android:layout_width="8dp"
        android:layout_height="15dp"
        app:layout_constraintTop_toBottomOf="@id/appbar"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="9dp"
        android:background="@mipmap/ic_next"
        tools:ignore="ContentDescription" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="登录密码"
        android:textColor="@color/c_333333"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/appbar"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="83dp"
        android:layout_marginStart="12dp"/>

    <TextView
        android:id="@+id/tv_nick_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="修改"
        android:textColor="@color/c_FE6C30"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/appbar"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="83dp"
        android:layout_marginEnd="28dp"/>

    <ImageView
        android:layout_width="8dp"
        android:layout_height="15dp"
        app:layout_constraintTop_toBottomOf="@id/appbar"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="85dp"
        android:layout_marginEnd="9dp"
        android:background="@mipmap/ic_next"
        tools:ignore="ContentDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>