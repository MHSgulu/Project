<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:backgroundTint="@color/c_2F302B"
        app:elevation="0dp"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:navigationIcon="@mipmap/ic_arrow_back_ios_new_black_24"
            app:navigationIconTint="@color/c_FE6C30"
            app:title="修改登录密码"
            app:titleCentered="true"
            app:titleTextAppearance="@style/TextAppearance.Widget.MaterialToolbar.title"
            app:titleTextColor="@color/c_FE6C30" />

    </com.google.android.material.appbar.AppBarLayout>

    <ImageView
        android:layout_width="13.71dp"
        android:layout_height="19.36dp"
        android:background="@color/c_FE6C30"
        app:layout_constraintTop_toBottomOf="@+id/appbar"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="35dp"
        android:layout_marginStart="16dp"
        tools:ignore="ContentDescription" />

    <EditText
        android:id="@+id/edit_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="输入新手机号"
        android:textColorHint="@color/c_999999"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/appbar"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="35dp"
        android:layout_marginStart="43dp"
        android:layout_marginEnd="23dp"
        android:background="@null"/>

    <ImageView
        android:layout_width="13.71dp"
        android:layout_height="19.36dp"
        android:background="@color/c_FE6C30"
        app:layout_constraintTop_toBottomOf="@+id/appbar"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="109dp"
        android:layout_marginStart="16dp"
        tools:ignore="ContentDescription" />

    <EditText
        android:id="@+id/edit_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="输入验证码"
        android:textColorHint="@color/c_999999"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/appbar"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="108dp"
        android:layout_marginStart="43dp"
        android:layout_marginEnd="230dp"
        android:background="@null"/>

    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="获取验证码"
        android:textColor="@color/c_FE6C30"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/appbar"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="98dp"
        android:layout_marginEnd="23dp"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        app:strokeColor="@color/c_FE6C30"
        app:cornerRadius="20dp"/>

    <ImageView
        android:layout_width="13.71dp"
        android:layout_height="19.36dp"
        android:background="@color/c_FE6C30"
        app:layout_constraintTop_toBottomOf="@+id/appbar"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="170dp"
        android:layout_marginStart="16dp"
        tools:ignore="ContentDescription" />

    <EditText
        android:id="@+id/edit_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="输入新登录密码"
        android:textColorHint="@color/c_999999"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/appbar"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="169dp"
        android:layout_marginStart="43dp"
        android:layout_marginEnd="23dp"
        android:background="@null"/>


</androidx.constraintlayout.widget.ConstraintLayout>