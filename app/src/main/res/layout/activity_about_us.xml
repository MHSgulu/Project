<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".AboutUsActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:backgroundTint="@color/c_2F302B"
        app:elevation="0dp"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:navigationIcon="@mipmap/ic_arrow_back_ios_new_black_24"
            app:navigationIconTint="@color/c_FE6C30"
            app:title="关于我们"
            app:titleCentered="true"
            app:titleTextAppearance="@style/TextAppearance.Widget.MaterialToolbar.title"
            app:titleTextColor="@color/c_FE6C30" />

    </com.google.android.material.appbar.AppBarLayout>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="66dp"
        android:layout_height="66dp"
        app:cardBackgroundColor="@color/c_C4C4C4"
        app:cardCornerRadius="11dp"
        app:cardElevation="0dp"
        app:layout_constraintTop_toBottomOf="@+id/appbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="14dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/about_us_subTitle"
        android:textSize="16sp"
        android:textColor="@color/c_333333"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/appbar"
        android:layout_marginTop="94dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/about_us_intro"
        android:textSize="14sp"
        android:textColor="@color/c_333333"
        app:layout_constraintTop_toBottomOf="@+id/appbar"
        android:layout_marginTop="136dp"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="©2020-2021Copyright优禾商业（天津）有限公司"
        android:textSize="14sp"
        android:textColor="@color/c_999999"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="140dp" />

</androidx.constraintlayout.widget.ConstraintLayout>